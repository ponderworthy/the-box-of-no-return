// ------------------------------
//  Sonatina Symphonic Orchestra
// ------------------------------
//         Contrabassoon
// ------------------------------

<group>
pan=17
xfout_lokey=a#1
xfout_hikey=e2
// randomize like a real player(PB)
pitch_random=12
amp_random=1.5
delay_random=0.012



// add some volume vibrato (PB)
amplfo_freq=4.57
amplfo_depth=0.6
amplfo_delay=1.0
amplfo_fade=0.5

// add some further volume vibrato [sfz2.0] (PB)
lfo01_delay=2.3
lfo01_fade=0.5
lfo01_wave=1
lfo01_volume=0.20
lfo01_freq=2.79

// longer attack for sustain (PB)
ampeg_attack=0.6

ampeg_release=0.500

