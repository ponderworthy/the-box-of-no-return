<group>
// randomize like a real player(PB)
pitch_random=12
amp_random=1.5
delay_random=0.012



volume=3
ampeg_attack=0.2 // longer attack for sustain (PB)
ampeg_release=0.5

// add vibrato (PB)
amplfo_freq=4.531
amplfo_depth=1.5
amplfo_delay=1
amplfo_fade=1.5



fil_veltrack=11000
fil_type=lpf_2p
cutoff=120

<region>
sample=..\libs\SSO\Samples\Bassoon\bassoon-a#1-PB-loop.wav
lokey=a#1
hikey=b1
pitch_keycenter=a#1
tune=-13

