<hbox spacing="5" homogeneous="1">
    <vbox>
        <label text="Att Boost"/>
        <knob param="attack_boost" type="1"/>
        <value param="attack_boost"/>
    </vbox>
    <vbox>
        <label text="Rel Boost"/>
        <knob param="release_boost" type="1"/>
        <value param="release_boost"/>
    </vbox>
    <vbox>
        <label text="Att Time"/>
        <knob param="attack_time" ticks="1 5 50 500"/>
        <value param="attack_time"/>
    </vbox>
    <vbox>
        <label text="Rel Time"/>
        <knob param="release_time" ticks="1 5 50 500 5000"/>
        <value param="release_time"/>
    </vbox>
    <toggle param="bypass" icon="bypass"/>
</hbox>
